    <version>1.2.0</version>
	<description>This module will display upto 3 markers on a google map on your Joomla site. You need a valid API key for this module to work. You can get a free key by going to http://code.google.com/apis/maps/signup.html.</description>
	<files>
		<filename module="mod_jb_maps">mod_jb_maps.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="height" type="text" default="400" label="Height of Map" description="Height" />
				<field name="width" type="text" default="400" label="Width of Map" description="Longitude" />
				    <field name="zoom" type="list" default="5" label="Zoom level" description="The level of Zoom on Page load">
				        <option value="0">0</option>
				        <option value="1">1</option>
				        <option value="2">2</option>
				        <option value="3">3</option>
				        <option value="4">4</option>
				        <option value="5">5</option>
				        <option value="6">6</option>
				        <option value="7">7</option>
				        <option value="8">8</option>
				        <option value="9">9</option>
